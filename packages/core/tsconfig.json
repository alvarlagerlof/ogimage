{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "jest.config.ts",
    "src/__tests__/**/*",
    "jestGlobalSetup.js"
  ],
  "exclude": ["node_modules"]
}
