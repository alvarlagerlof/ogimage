{
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    ".eslintrc.cjs",
    "jest.config.ts",
    "src/__tests__/**/*"
  ],
  "exclude": ["node_modules"]
}
