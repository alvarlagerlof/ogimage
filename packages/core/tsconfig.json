{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noEmit": true
  },
  "include": ["src/**/*", ".eslintrc.cjs", "__tests__/**/*"],
  "exclude": ["node_modules"]
}
